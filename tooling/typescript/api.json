{
  "extends": "../../tooling/typescript/base.json",
  "compilerOptions": {
    "lib": [
      "ESNext"
    ],
    "target": "ESNext",
    "module": "ESNext",
    "moduleDetection": "force",
    "allowJs": true,
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "verbatimModuleSyntax": true,
    "noEmit": true,
    "skipLibCheck": true,
    "types": [
      "bun"
    ],
    "paths": {
      "@/*": [
        "./src/*"
      ]
    }
  }
}